<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txtCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="click to CornerActivity"
        android:textSize="16dp"
        android:background="#f9d55f"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtStartMondel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="click to StartMondel"
        android:textSize="16dp"
        android:background="#f9d55f"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtWheelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="click to WheelViewDemo"
        android:textSize="16dp"
        android:background="#f9d55f"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
